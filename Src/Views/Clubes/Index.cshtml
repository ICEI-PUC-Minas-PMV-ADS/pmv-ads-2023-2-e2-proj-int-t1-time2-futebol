@model IEnumerable<FutScout_2023.Models.Clube>

@{
    ViewData["Title"] = "Index";
}

<style>
    #Aa {
        text-decoration: none;
        font-size: 14px;
        margin-left: 4px;
        margin-right: 2px;
    }
</style>

<h1>Lista de Clubes</h1>

@if (User.Identity.IsAuthenticated)
{
    <p>
        <a asp-action="Create" class="btn btn-success">Cadastrar novo Clube</a>
    </p>
}

<form method="get">
    <label for="Série">Filtrar Série:</label>
    <select name="Série" id="Série">
        <option value="" selected="@(string.IsNullOrEmpty(ViewBag.SérieSelecionada) ? "selected" : "")">Todos</option>
        @foreach (var série in (List<string>)ViewBag.TodasAsSéries)
        {
            <option value="@série" selected='@(série == ViewBag.SérieSelecionada ? "selected" : null)'>@série</option>
        }
    </select>
    <input type="submit" value="Filtrar" class="btn btn-primary">
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
                <a href="@Url.Action("Index", new { sortBy = "Nome", sortDirection = "asc", série = ViewBag.SérieSelecionada })" id="Aa">↓</a>
                <a href="@Url.Action("Index", new { sortBy = "Nome", sortDirection = "desc", série = ViewBag.SérieSelecionada })" id="Aa">↑</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
                <a href="@Url.Action("Index", new { sortBy = "Estado", sortDirection = "asc", série = ViewBag.SérieSelecionada })" id="Aa">↓</a>
                <a href="@Url.Action("Index", new { sortBy = "Estado", sortDirection = "desc", série = ViewBag.SérieSelecionada })" id="Aa">↑</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Série)
                <a href="@Url.Action("Index", new { sortBy = "Série", sortDirection = "asc", série = ViewBag.SérieSelecionada })" id="Aa">↓</a>
                <a href="@Url.Action("Index", new { sortBy = "Série", sortDirection = "desc", série = ViewBag.SérieSelecionada })" id="Aa">↑</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.gols2021)
                <a href="@Url.Action("Index", new { sortBy = "gols2021", sortDirection = "asc", série = ViewBag.SérieSelecionada })" id="Aa">↓</a>
                <a href="@Url.Action("Index", new { sortBy = "gols2021", sortDirection = "desc", série = ViewBag.SérieSelecionada })" id="Aa">↑</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.gols2022)
                <a href="@Url.Action("Index", new { sortBy = "gols2022", sortDirection = "asc", série = ViewBag.SérieSelecionada })" id="Aa">↓</a>
                <a href="@Url.Action("Index", new { sortBy = "gols2022", sortDirection = "desc", série = ViewBag.SérieSelecionada })" id="Aa">↑</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.gols2023)
                <a href="@Url.Action("Index", new { sortBy = "gols2023", sortDirection = "asc", série = ViewBag.SérieSelecionada })" id="Aa">↓</a>
                <a href="@Url.Action("Index", new { sortBy = "gols2023", sortDirection = "desc", série = ViewBag.SérieSelecionada })" id="Aa">↑</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Série)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.gols2021)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.gols2022)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.gols2023)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Visualizar</a>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        
      
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>
